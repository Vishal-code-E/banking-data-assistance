# Banking Data Assistant - Environment Configuration
# Copy to .env and fill in values. NEVER commit .env to git.

# ── Application ──────────────────────────────────────────────
DEBUG=False
APP_NAME=Banking Data Assistant
APP_VERSION=1.0.0

# ── Database ─────────────────────────────────────────────────
# Development (SQLite)
DATABASE_URL=sqlite:///banking_10k.db
# Production (Render PostgreSQL — set as env var on Render)
# DATABASE_URL=postgresql://user:password@host:5432/banking_db

# Connection Pool (PostgreSQL only)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ── Server ───────────────────────────────────────────────────
# Render injects PORT automatically; default 10000
PORT=10000

# ── Query Execution ──────────────────────────────────────────
QUERY_TIMEOUT=30
MAX_RESULT_ROWS=1000

# ── CORS Origins (comma-separated) ──────────────────────────
# Add your Render Static Site URL here for production
CORS_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# ── AI / LLM ────────────────────────────────────────────────
OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o-mini
# LLM_TEMPERATURE=0.0
# LLM_MAX_TOKENS=2000
